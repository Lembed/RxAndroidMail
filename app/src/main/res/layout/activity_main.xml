<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.lembed.app.MainActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="user@gmail.com"
        android:id="@+id/user_name"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="password"
        android:id="@+id/password"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/host"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="smtp.gmail.com"
        android:id="@+id/host"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/port"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="465"
        android:id="@+id/port"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/mail_to"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="another@gmail.com"
        android:id="@+id/mail_to"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/subject"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="subject"
        android:id="@+id/subject"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/type"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="text/plain"
        android:textSize="12dp"
        android:id="@+id/type"
        android:textAlignment="center"
        android:layout_above="@+id/body"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="body!"
        android:id="@+id/body"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/attachments"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="/data/files/email.jpg"
        android:id="@+id/attachments"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_above="@+id/status"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:id="@+id/status"
        android:textSize="12dp"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/mail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mail"
        android:id="@+id/mail"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
